<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/book_detail_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/book_no_name"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:id="@+id/book_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="书名"
        android:textSize="26dp"
        android:gravity="center"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_info_title_bar_text_view"
                android:textSize="12sp"
                android:ellipsize="end"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="信息(来源):Manually" />

            <View
                android:background="#ffe0e0e0"
                android:layout_width="fill_parent"
                android:layout_height="1dp" />


            <RelativeLayout
                android:id="@+id/book_info_author_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"

                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_person_24" />

                <TextView
                    android:id="@+id/book_info_author_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_marginStart="72dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/book_info_publisher_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_blinds_closed_24" />

                <TextView
                    android:id="@+id/book_info_publisher_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:text="出版社"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/book_info_pubtime_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_calendar_month_24" />

                <TextView
                    android:id="@+id/book_info_pubtime_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:text="出版日期"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/book_info_isbn_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_isbn_primary" />

                <TextView
                    android:id="@+id/book_info_isbn_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_centerVertical="true"
                    android:text="isbn"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="详情" />

            <View
                android:background="#ffe0e0e0"
                android:layout_width="fill_parent"
                android:layout_height="1dp" />


            <RelativeLayout
                android:id="@+id/book_detail_reading_status_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_event_note_24" />

                <TextView
                    android:id="@+id/book_detail_reading_status_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:text="未读"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/book_detail_bookshelf_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_library_books_24" />

                <TextView
                    android:id="@+id/book_detail_bookshelf_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:text="默认书架"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/book_detail_labels_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_speaker_notes_24" />

                <TextView
                    android:id="@+id/book_detail_labels_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp"
                    android:hint="笔记"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/book_detail_website_item"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_label_24" />

                <TextView
                    android:id="@+id/book_detail_website_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="72dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp"
                    android:hint="标签"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>